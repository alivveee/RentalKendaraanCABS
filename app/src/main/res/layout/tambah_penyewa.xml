    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/input_tanggal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/sort"
        app:layout_constraintEnd_toEndOf="@+id/sort"
        app:layout_constraintStart_toStartOf="@+id/sort"
        app:layout_constraintTop_toBottomOf="@+id/input_merk_kendaraan"
        app:layout_constraintVertical_bias="0.01"
        android:textColorHint="@color/kuning"
        app:hintTextColor="@color/kuning"
        android:hint="Pilih Tanggal Disewa"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:clickable="false"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/date"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/calendar"
        app:layout_constraintBottom_toBottomOf="@+id/input_tanggal"
        app:layout_constraintEnd_toEndOf="@+id/input_tanggal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_tanggal"
        app:layout_constraintTop_toTopOf="@+id/input_tanggal"
        app:layout_constraintVertical_bias="0.533" />



    <View
        android:id="@+id/footer"
        android:layout_width="471dp"
        android:layout_height="93dp"
        android:background="@drawable/footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/intersemibold"
        android:text="Submit"
        android:textColor="@color/kuning"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/footer"
        app:layout_constraintVertical_bias="0.644" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_merk_kendaraan"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Merk Kendaraan"
        android:textColorHint="@color/kuning"
        android:textSize="10dp"
        app:boxBackgroundColor="@color/yungabu"
        app:hintTextColor="@color/kuning"
        app:layout_constraintEnd_toEndOf="@+id/sort"
        app:layout_constraintStart_toStartOf="@+id/sort"
        app:layout_constraintTop_toBottomOf="@+id/textView3"

        >

        <AutoCompleteTextView
            android:id="@+id/tv_merk_kendaraan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="390dp" />


    </com.google.android.material.textfield.TextInputLayout>


