<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <View
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rectangell"
            android:backgroundTint="@color/abuabu"
            android:layout_marginTop="0dp">
        </View>

        <View
            android:id="@+id/view"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/header"
            android:layout_alignRight="@id/header"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/logo" />
        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="53dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back"
            android:backgroundTint="@color/kuning"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/temukan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="50dp"
            android:text="Tambah Kendaraan"
            android:textStyle="bold"
            android:textColor="@color/kuning"
            android:textSize="26sp" />

    </RelativeLayout>
    <!--        end header-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Kendaraan"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/abuabu"
                    android:textSize="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="8dp">
                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Kendaraan"
                    android:textColorHint="@color/yellow"
                    android:textSize="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/abuabu"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_namaKendaraan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tahun Kendaraan"
                    android:textColorHint="@color/kuning"
                    android:textSize="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/abuabu">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_tahunKendaraan"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tarif Kendaraan / Hari"
                    android:textColorHint="@color/kuning"
                    android:textSize="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/abuabu">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_tarifKendaraan"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jenis Mesin"
                    android:textColorHint="@color/kuning"
                    android:textSize="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/abuabu"
                    app:endIconTint="@color/abuabu">

                    <AutoCompleteTextView
                        android:id="@+id/et_jenisMesin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah Penumpang"
                    android:textColorHint="@color/kuning"
                    android:textSize="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/abuabu">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_jumlahPenumpang"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah Kendaraan"
                    android:textColorHint="@color/kuning"
                    android:textSize="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/abuabu">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_jumlahKendaraan"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi"
                    android:textColorHint="@color/kuning"
                    android:textSize="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/abuabu">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_deskripsiKendaraan"
                        android:inputType="textMultiLine|textImeMultiLine"
                        android:minLines="3"
                        android:maxLines="5"
                        android:imeOptions="actionDone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_tanggal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/yungabu"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/upload_image"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/upload_image">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Image"
                            android:textAlignment="center"
                            android:textColor="@color/kuning">
                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

    <!--    footer-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        android:background="@color/abuabu">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_submit"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/intersemibold"
            android:text="Submit"
            android:textColor="@color/kuning" />

    </RelativeLayout>
    <!--end footer-->

</LinearLayout>